<html>
  <head>
    <style>
    body {
      background-image: url("http://www.pammarketingnut.com/wp-content/uploads/photodune-3214980-birdie5-xs.jpg");
      background-repeat: no-repeat;
      background-position: left center;
      font-family: Helvetica,Arial,sans-serif;
    }
    label {
      display:inline-block;
      width:150px;
      margin-bottom: 10px;
      height: 30px;
    }
    input {
      font-size: 100%;
      width: 250px;
      height: 30px;
    }
    p {
      border : 1px solid #00ACED;
      border-radius: 5px;
      padding: 5px;
    }
    .outer_container {
      position: absolute;
      display: table;
      width: 100%;
      height: 100%;
    }
    .inner_container {
      display: table-cell;
      vertical-align: middle;
      text-align: center;
    }
    .centered_content {
      display: inline-block;
      text-align: left;
      background: #FFF;
      padding : 20px;
      border : 5px solid #00ACED;
      border-radius: 10px;
    }
    .button {
      border-radius: 5px;
      height: 30px;
      width: 405px;
      border: 1px solid;
      background: #00ACED;
      font-size: 100%;
      color: #FFF;
    }
    .top_right_buttons {
      border-radius: 5px;
      height: 30px;
      width: 100px;
      border: 1px solid;
      background: #00ACED;
      font-size: 100%;
      color: #FFF;
      position: absolute;
      right: 0;
    }
    .notice {
      position: absolute;
      top: 215px;
      left: 280px;
      color: #FFF;
      font-size: 100%;
    }
    </style>
  </head>

  <body>
    <% if current_user %>
      <form id='signout' action='/sessions' method='post'>
        Welcome to Chitter, <%= current_user.name %>
        <input type='hidden' name='_method' value='delete'>
        <input class='top_right_buttons' type='submit' value='Sign Out' />
      </form>
    <% end %>

    <%= yield %>

    <% if flash[:errors] && !flash[:errors].empty? %>
      Please correct the following errors:
      <ul id='errors'>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>

    <% if flash[:notice] %>
      <div class='notice'>
        <%= flash[:notice] %>
      </div>
    <% end %>
  </body>
</html>
