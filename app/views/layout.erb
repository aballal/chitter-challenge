<html>
  <head>
    <style>
    body {
      font-family: Helvetica,Arial,sans-serif;
    }
    label {
      display:inline-block;
      width:150px;
      margin-bottom: 10px;
    }
    input {
      font-size: 75%;
      width: 150px;
    }
    .outer_container {
      position: absolute;
      display: table;
      width: 100%;
      height: 100%;
    }
    .inner_container {
      display: table-cell;
      vertical-align: middle;
      text-align: center;
    }
    .centered_content {
      display: inline-block;
      text-align: left;
      background: #FFF;
      padding : 20px;
      border : 5px solid #00ACED;
      border-radius: 10px;
    }
    .button {
      border-radius: 5px;
      height: 30px;
      width: 305px;
      border: 1px solid;
      background: #00ACED;
      font-size: 100%;
      color: #FFF;
    }
    </style>
  </head>

  <body>
    <% if current_user %>
      Welcome to Chitter, <%= current_user %>
    <% else %>
      <br>
    <% end %>
    <%= yield %>
  </body>
</html>
